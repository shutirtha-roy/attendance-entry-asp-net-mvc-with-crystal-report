@model AttendanceCreateModel
@{
    ViewData["Title"] = "Create";
}


<div class="text-center">
    <h1 class="form-title">Add Your Attendance</h1>
</div>


<form role="form" asp-antiforgery="true" asp-action="Create"
    asp-area="Employee" asp-controller="EmployeeAttendance" method="post">
        <div class="mx-auto text-center mb-5" style="width: 620px;">

        <input type="hidden" asp-for="EmployeeId"/>

        <div class="form-group row">
            <label asp-for="CreatedDate"></label>
            <input type="date" asp-for="CreatedDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="CreatedDate" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="InTime"></label>
            <input type="time" asp-for="InTime" class="form-control" value="@DateTime.Now.ToString("HH:mm")" />
            <span asp-validation-for="InTime" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="OutTime"></label>
            <input type="time" asp-for="OutTime" class="form-control" />
            <span asp-validation-for="OutTime" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="Remarks"></label>
            <input type="text" asp-for="Remarks" class="form-control" />
            <span asp-validation-for="Remarks" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width: 150px">Create Attendance</button>
    </div>
</form>


<br /><br />

<table id="tblEmployeeAttendanceData" class="table table-bordered table-striped" style="width: 100%; text-align:center;">
    <thead>
        <tr>
            <th>EmployeeName</th>
            <th>CreatedDate</th>
            <th>InTime</th>
            <th>OutTime</th>
            <th>Remarks</th>
        </tr>
    </thead>

        
</table>


@section Scripts
{
    <script src="~/js/employeeOnlyAttendance.js"></script>
}

